{{!-- Setup the index.handlebars to have the template that Handlebars can render
onto. --}}
<header>
    <div class="container">

        <header id="color-override text-center">Eat Da Burger</header>


        <h1 id="color-override text-center"></h1>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    {{!-- Create a button in index.handlebars that will
                    submit
                    the user input into the database. --}}
                    <button type="submit" class="btn btn-success"
                        id="addburger">Add</button>

                </form>
            </panel>
        </div>
    </header>
    <div class="row">
        <!-- Burgers List -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="newBurgers"><strong>New
                        Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}
                            </strong></span>
                        <button type="button" class="eatburger btn
                            btn-warning"
                            id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}">Devour</button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="devourburgers"><strong>Devoured
                        Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}}
                            </strong></span>

                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->